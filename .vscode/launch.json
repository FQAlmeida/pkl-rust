    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'pkl-bind'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=pkl-bind"
                ],
                "filter": {
                    "name": "pkl-bind",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'pkl-gen'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=pkl-gen",
                    "--package=pkl-gen"
                ],
                "filter": {
                    "name": "pkl-gen",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
